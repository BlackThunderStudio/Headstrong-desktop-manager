<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="com.headstrongpro.desktop.view.companies.CompaniesContextView"
          xmlns:fx="http://javafx.com/fxml" styleClass="context-view">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="75.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="175.0" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="45.0" minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" minHeight="25.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="300.0" minHeight="40.0" prefHeight="155.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="300.0" minHeight="110.0" prefHeight="110.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="BOTTOM_LEFT" GridPane.rowIndex="8" GridPane.columnSpan="2">
        <GridPane.margin>
            <Insets bottom="20.0"/>
        </GridPane.margin>
        <Label prefHeight="21.0" text="Related items">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Separator maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="7.0" left="10.0"/>
            </HBox.margin>
        </Separator>
    </HBox>
    <Separator prefWidth="200.0" GridPane.rowIndex="7" GridPane.valignment="TOP" GridPane.columnSpan="2">
        <GridPane.margin>
            <Insets top="12.5"/>
        </GridPane.margin>
    </Separator>

    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="companyNameTextfield" promptText="Name" GridPane.rowIndex="1" GridPane.columnIndex="1"
               editable="false"/>

    <Label text="CVR:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="companyCvrTextfield" promptText="CVR" GridPane.rowIndex="2" GridPane.columnIndex="1"
               editable="false"/>

    <Label text="Street:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="companyStreetTextfield" promptText="Street" GridPane.rowIndex="3" GridPane.columnIndex="1"
               editable="false"/>

    <Label text="Postal code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="companyPostalTextfield" promptText="Postal code" GridPane.rowIndex="4" GridPane.columnIndex="1"
               editable="false"/>

    <Label text="City:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="companyCityTextfield" promptText="City" GridPane.rowIndex="5" GridPane.columnIndex="1"
               editable="false"/>

    <Label text="Country:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="companyCountryTextfield" promptText="Country" GridPane.rowIndex="6" GridPane.columnIndex="1"
               editable="false"/>

    <HBox fx:id="topControls" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
          GridPane.halignment="RIGHT" GridPane.columnSpan="2">
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
        <Button fx:id="toggleEditButton" onMouseClicked="#toggleEditMode" contentDisplay="CENTER" maxWidth="90.0"
                minWidth="90.0" mnemonicParsing="false" prefWidth="90.0" text="Edit"/>
        <Button fx:id="deleteButton" onMouseClicked="#handleDelete" mnemonicParsing="false"
                prefHeight="25.0" prefWidth="90.0" text="Delete"/>
        <Button fx:id="editButton" onMouseClicked="#handleEdit" contentDisplay="CENTER" maxWidth="90.0" minWidth="90.0"
                mnemonicParsing="false" prefWidth="90.0" text="Save changes"/>
        <Button fx:id="cancelButton" onMouseClicked="#handleCancel" mnemonicParsing="false"
                prefHeight="25.0" prefWidth="90.0" text="Cancel"/>
    </HBox>
    <GridPane hgap="10.0" vgap="10.0" GridPane.rowIndex="9" GridPane.columnSpan="2">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="companyClientsButton" minHeight="25.0" minWidth="90.0" mnemonicParsing="false"
                prefHeight="1000.0" prefWidth="1000.0" text="Clients" GridPane.halignment="CENTER"
                GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Button>
        <Button fx:id="companyDepartmentsButton" minHeight="25.0" minWidth="90.0" mnemonicParsing="false"
                prefHeight="1000.0" prefWidth="1000.0" text="Departments" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Button>
        <Button fx:id="companyGroupsButton" minHeight="25.0" minWidth="90.0" mnemonicParsing="false"
                prefHeight="1000.0" prefWidth="1000.0" text="Groups" GridPane.halignment="CENTER"
                GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Button>
        <Button fx:id="companySubscriptionsButton" minHeight="25.0" minWidth="90.0" mnemonicParsing="false"
                prefHeight="1000.0" prefWidth="1000.0" text="Subscriptions" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Button>
    </GridPane>
</GridPane>
