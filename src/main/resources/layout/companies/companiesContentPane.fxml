<GridPane maxWidth="1500" minHeight="500" minWidth="500" prefHeight="700" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.headstrongpro.desktop.view.CompaniesView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1500.0" minWidth="500.0" prefWidth="800.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER" />
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER" />
        <RowConstraints maxHeight="1000.0" minHeight="320.0" prefHeight="520.0" vgrow="ALWAYS" />
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER" />
</rowConstraints>
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0" styleClass="headerPane">
         <children>
            <Text fx:id="companiesHeader" layoutX="14.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Companies">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <TextField fx:id="searchCompaniesTextfield" promptText="Search" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="20.0" right="20.0" />
         </GridPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <TableView fx:id="companiesTable" maxHeight="4000.0" maxWidth="4000.0" minHeight="200.0" minWidth="460.0" prefHeight="520.0" prefWidth="760.0" GridPane.rowIndex="2">
        <columns>
          <TableColumn fx:id="companyIdCol" prefWidth="75.0" text="Id" />
            <TableColumn fx:id="companyNameCol" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="companyCvrCol" prefWidth="75.0" text="CVR" />
            <TableColumn fx:id="companyStreetCol" prefWidth="75.0" text="Street" />
            <TableColumn fx:id="companyPostalCol" prefWidth="75.0" text="Postal" />
            <TableColumn fx:id="companyCityCol" prefWidth="75.0" text="City" />
            <TableColumn fx:id="companyCountryCol" prefWidth="75.0" text="Country" />
        </columns>
         <GridPane.margin>
            <Insets left="20.0" right="20.0" />
         </GridPane.margin>
      </TableView>
      <Button fx:id="newCompanyButton" maxWidth="110.0" minWidth="110.0" mnemonicParsing="false" prefWidth="110.0" text="New" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets right="20.0" />
         </GridPane.margin>
      </Button>
   </children>
</GridPane>
