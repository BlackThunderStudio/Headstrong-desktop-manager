    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="55.0" prefWidth="80.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="155.0" prefWidth="180.0" />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="45.0" minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="50.0" minHeight="25.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="500.0" minHeight="40.0" prefHeight="395.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="150.0" minHeight="110.0" prefHeight="150.0" vgrow="SOMETIMES" />


    </rowConstraints>
    <children>
        <HBox alignment="BOTTOM_LEFT" GridPane.columnSpan="2" GridPane.rowIndex="6">
            <children>
                <Label prefHeight="21.0" text="Related items">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Separator maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="7.0" left="10.0" />
                    </HBox.margin>
                </Separator>
            </children>
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </HBox>
        <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="12.5" />
            </GridPane.margin></Separator>
        <TextField fx:id="clientsNameTextfield" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="clientsEmailTextfield" promptText="E-mail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="clientsPhoneTextfield" promptText="Phone number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT">
            <children>
                <Button fx:id="clientsEditButton" contentDisplay="CENTER" maxWidth="90.0" minWidth="90.0" mnemonicParsing="false" onAction="#clientEditButtonOnClick" prefWidth="90.0" text="Edit" />
                <Button fx:id="clientsDeleteButton" maxWidth="90.0" minWidth="90.0" mnemonicParsing="false" onAction="#clientDeleteButtonOnClick" prefWidth="90.0" text="Delete" />
            </children>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </HBox>
        <GridPane hgap="10.0" vgap="10.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="clientsCompanyButton" minHeight="25.0" minWidth="90.0" mnemonicParsing="false" prefHeight="1000.0" prefWidth="1000.0" text="Company" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin></Button>
                <Button fx:id="clientsGroupsButton" minHeight="25.0" minWidth="80.0" mnemonicParsing="false" prefHeight="1000.0" prefWidth="1000.0" text="Groups" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin></Button>
                <Button fx:id="clientsDepartmentsButton" minHeight="25.0" minWidth="80.0" mnemonicParsing="false" prefHeight="1000.0" prefWidth="1000.0" text="Departments" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin></Button>
            </children>
        </GridPane>
      <Label text="Gender:" GridPane.rowIndex="4" />
      <RadioButton fx:id="clientsGenderMaleRadio" mnemonicParsing="false" text="Male" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="5.0" />
         </padding></RadioButton>
      <RadioButton fx:id="clientsGenderFemaleRadio" mnemonicParsing="false" text="Female" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets right="15.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="5.0" />
         </padding></RadioButton>
      <Label text="Name:" GridPane.rowIndex="1" />
      <Label text="E-mail:" GridPane.rowIndex="2" />
      <Label text="Phone:" GridPane.rowIndex="3" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
