        <TextField fx:id="coursesCatNameTextfield" promptText="Name" GridPane.rowIndex="1" />
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.halignment="RIGHT">
            <children>
                <Button fx:id="coursesCatEditButton" contentDisplay="CENTER" maxWidth="90.0" minWidth="90.0" mnemonicParsing="false" prefWidth="90.0" text="Edit" />
