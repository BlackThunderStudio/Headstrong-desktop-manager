<?xml version="1.0" encoding="UTF-8"?>

<?import com.headstrongpro.desktop.core.fxControls.Footer?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane prefHeight="700.0" prefWidth="800.0" styleClass="content-view" xmlns="http://javafx.com/javafx/8.0.112"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.headstrongpro.desktop.view.resources.ResourcesContentView">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="500.0" percentWidth="100.0" prefWidth="800.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="4000.0" minHeight="300.0" prefHeight="640.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
    </rowConstraints>
    <Pane prefHeight="200.0" prefWidth="200.0">
        <Text fx:id="headerText" layoutX="14.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Resources">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>
    </Pane>
    <ComboBox fx:id="resourcesComboBox" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
              GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
        <GridPane.margin>
            <Insets right="20.0"/>
        </GridPane.margin>
    </ComboBox>
    <TableView fx:id="mainTable" maxWidth="4000.0" minWidth="400.0" prefHeight="200.0" GridPane.rowIndex="3">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="nameCol" minWidth="150" prefWidth="250" text="Name"/>
            <TableColumn fx:id="descCol" minWidth="200" prefWidth="330" text="Description"/>
            <TableColumn fx:id="typeCol" minWidth="50" prefWidth="70" text="Type"/>
        </columns>
        <GridPane.margin>
            <Insets left="20.0" right="20.0"/>
        </GridPane.margin>
    </TableView>
    <GridPane GridPane.rowIndex="4">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="487.0" minWidth="10.0" prefWidth="478.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="395.0" minWidth="10.0" prefWidth="322.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Footer fx:id="footer" prefHeight="32.0" prefWidth="250.0"
                GridPane.halignment="LEFT">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Footer>
        <Button fx:id="addNewButton" maxWidth="110.0" minWidth="110.0" mnemonicParsing="false"
                onAction="#newResourceButton_onClick" prefWidth="110.0" text="New" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="assignToCourseButton" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false"
                onAction="#assignToCourseButton_onClick" prefWidth="150.0" text="Assign to course"
                GridPane.columnIndex="1" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="150.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
    <GridPane GridPane.rowIndex="2">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="110.0" prefWidth="110.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="725.0" minWidth="200.0" prefWidth="706.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
        <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
            </GridPane.margin>
        </TextField>
        <Button fx:id="refreshButton" maxWidth="90.0" minWidth="90.0" mnemonicParsing="false"
                onAction="#handleRefresh" prefWidth="90.0" text="Refresh">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
</GridPane>
