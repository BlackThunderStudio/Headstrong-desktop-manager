<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane styleClass="content-view" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.headstrongpro.desktop.view.departments.DepartmentsContentView">
    <columnConstraints>
        <ColumnConstraints maxWidth="300.0" minWidth="300.0" percentWidth="100.0" prefWidth="300.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="4000.0" minHeight="200.0" prefHeight="500.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="NEVER"/>
    </rowConstraints>
    <Pane prefHeight="200.0" prefWidth="200.0">
        <Text fx:id="departmentsHeader" layoutX="14.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Departments">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>
    </Pane>
    <TextField fx:id="searchDepartmentsTextfield" promptText="Search" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="20.0" right="20.0"/>
        </GridPane.margin>
    </TextField>
    <TableView fx:id="departmentsTable" maxHeight="4000.0" maxWidth="4000.0" minHeight="200.0" minWidth="200.0"
               prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
        <columns>
            <TableColumn prefWidth="75.0" text="C1"/>
            <TableColumn prefWidth="75.0" text="C2"/>
        </columns>
        <GridPane.margin>
            <Insets left="20.0" right="20.0"/>
        </GridPane.margin>
    </TableView>
    <Button fx:id="newDepartmentButton" maxWidth="110.0" minWidth="110.0" mnemonicParsing="false" prefWidth="110.0"
            text="New" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets right="20.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
